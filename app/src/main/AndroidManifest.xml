<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.multimedia">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiMedia">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MediaPlayerActivity"/>
        <activity android:name=".AVPlayerActivity"/>
        <activity android:name=".ExoplayerActivity"/>
        <activity android:name=".GLSurfaceViewActivity"/>
        <activity android:name=".GLPictureActivity"/>
        <activity android:name=".GLPicActivity"/>
        <activity android:name=".GLMultiTextureActivity"/>
        <activity android:name=".GLCameraPictureActivity"/>
        <activity android:name=".FBOActivity"/>
        <activity android:name=".NDKPlayerActivity"/>
        <activity android:name=".WatermarkViewActivity"/>
        <activity android:name=".GLPICROTATEActivity"/>
    </application>

</manifest>